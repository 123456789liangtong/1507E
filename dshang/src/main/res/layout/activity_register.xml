<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="liangtong20170928.bawei.com.dshang.activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/nav">

        <ImageView
            android:id="@+id/iv_return_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_action_back"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="用户注册"
            android:textColor="@color/white" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/taobao"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/et_name_reg"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_edit_username"
            android:layout_gravity="center_horizontal"
            android:hint="请输入账号" />

        <EditText
            android:id="@+id/et_pwd_reg"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_edit_password"
            android:layout_gravity="center_horizontal"
            android:hint="请输入密码" />

        <EditText
            android:id="@+id/et_pwd2_reg"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_edit_password"
            android:layout_gravity="center_horizontal"
            android:hint="请再次输入密码" />

        <EditText
            android:id="@+id/et_email_reg"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_edit_email"
            android:layout_gravity="center_horizontal"
            android:hint="请输入邮箱" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_reg"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/nav"
        android:text="注册"
        android:layout_marginTop="20dp"
        android:textColor="@color/white" />


</LinearLayout>
