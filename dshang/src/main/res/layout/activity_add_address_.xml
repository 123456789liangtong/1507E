<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="liangtong20170928.bawei.com.dshang.activity.Add_address_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EEEEEE"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_browser_nav_back"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加新地址"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/et_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="@color/nav"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/et_true_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="收货人"
        />
    <EditText
        android:id="@+id/et_mob_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="联系电话"
        />
    <EditText
        android:id="@+id/et_city_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="城市"
        />
    <EditText
        android:id="@+id/et_area_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="省份"
        />
    <EditText
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="地址"
        />
    <EditText
        android:id="@+id/area_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="描述信息"
        />

</LinearLayout>
